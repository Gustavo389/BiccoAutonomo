<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:fillViewport="true"
    android:orientation="vertical"
    tools:context=".HomeScreen.TelaRecuperacao">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="150dp"
            android:background="@drawable/background_theme_bcc"
            android:fontFamily="@font/opensansbold"
            android:gravity="center"
            android:text="Recuperação de Senha"
            android:textAlignment="center"
            android:textColor="@color/white"
            android:textSize="40sp"
            android:textStyle="bold" />
    </LinearLayout>

    <EditText
        android:id="@+id/edt_box_inserir_recuperacao"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_gravity="center"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="90dp"
        android:layout_marginRight="10dp"
        android:background="@drawable/background_text_email"
        android:gravity="center"
        android:hint="Insira a senha de recuperação"
        android:textColorHint="@color/black" />

    <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/enviar_senha_recuperacao"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginStart="20dp"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="20dp"
            android:background="@drawable/background_theme_bcc"
            android:padding="15dp"
            android:text="Verificar senha"
            android:textColor="@color/white"/>
    </LinearLayout>